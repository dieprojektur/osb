<body>
<!-- start header -->
<div id="header">
	<div id="logo">
		<h1><a href="/">OpenSpace Board</a></h1>
    <h2><a href="http://www.dieprojektur.com/">By Die Projektur GmbH</a></h2>
	</div>
	<div id="menu"><%= render_or_default('menu') %></div>
</div>
<!-- end header -->
<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content"><%= yield %></div>
	<!-- end content -->
	<!-- start sidebar -->
  <div id="sidebar"><%= render_or_default('sidebar') %></div>
	<!-- end sidebar -->
	<div style="clear: both;">&nbsp;</div>
</div>
<!-- end page -->
<!-- start footer -->
<div id="footer">
	<div class="wrap">
		<div id="fbox1" class="box2">
      <h2><%= link_to 'Die Projektur', 'http://dieprojektur.com/'  %></h2>
    </div>
		<div id="fbox2" class="box2">
      <h2><%= link_to 'Go Agile ~ Go Scrum', 'http://www.scrum.cc/'  %></h2>
		</div>
		<div id="fbox3" class="box2">
			<h2><b>Metus</b> Nonummy</h2>
		</div>
	</div>
